#!/bin/sh

find . -name '*.java' -print | while read FILE
do
    printf "%s - " "$FILE"

    sed -e 's/^import.*com.sun.java.util.collections/import java.util/' \
        -e 's/com.sun.java.util.collections.//g' \
        -e 's/Map\$Entry/Map.Entry/g' \
        $FILE > /tmp/u2c$$
    if diff -q $FILE /tmp/u2c$$ > /dev/null
    then
	printf "ok\n" 
    else
        mv $FILE $FILE.jdk1_1
	mv /tmp/u2c$$ $FILE
	printf "UPDATED\n" 
    fi
done
