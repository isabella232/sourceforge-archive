========================================================================

The default target is "all", which will build everything in extra.

Other targets:

  clean         - Remove all generated files.
-->

<project name="Jetty Extra" default="all" basedir=".">

  <!-- ==================================================================== -->
  <property environment="env"/>
  <property name="plus"           value="${basedir}/plus"/>
  <property name="jboss"          value="${basedir}/jboss"/>
  <property name="loadbalancer"   value="${basedir}/loadbalancer"/>
  <property name="ftp"            value="${basedir}/ftp"/>
  <property name="jdk1.2"         value="${basedir}/jdk1.2"/>



  <!-- ==================================================================== -->
  <!-- all                                                                  -->
  <!-- ==================================================================== -->
  <target name="all" 
	  depends="do.plus,do.loadbalancer,do.ftp,do.jdk1.2"
	  description="Build all extras">
  </target>

  <target name="do.plus">
    <ant antfile="${plus}/build.xml" inheritAll="false"/>
  </target>

  <target name="do.loadbalancer">
    <ant antfile="${loadbalancer}/build.xml" inheritAll="false"/>
  </target>

  <target name="do.ftp">
    <ant antfile="${ftp}/build.xml" inheritAll="false"/>
  </target>

  <target name="do.jdk1.2">
    <ant antfile="${jdk1.2}/build.xml" inheritAll="false"/>
  </target>


  <!-- ==================================================================== -->
  <!-- Test                                                                -->
  <!-- ==================================================================== -->
  <target name="test" depends="test.plus,test.loadbalancer,test.ftp,test.jdk1.2">
  </target>

  <target name="test.plus">
    <ant antfile="${plus}/build.xml" inheritAll="false" target="test"/>
  </target>

  <target name="test.loadbalancer">
    <ant antfile="${loadbalancer}/build.xml" inheritAll="false" target="test"/>
  </target>

  <target name="test.ftp">
    <ant antfile="${ftp}/build.xml" inheritAll="false" target="test"/>
  </target>

  <target name="test.jdk1.2">
    <ant antfile="${jdk1.2}/build.xml" inheritAll="false" target="test"/>
  </target>


  <!-- ==================================================================== -->
  <!-- Clean                                                                -->
  <!-- ==================================================================== -->
  <target name="clean" depends="clean.plus,clean.loadbalancer,clean.ftp,clean.jdk1.2">
  </target>

  <target name="clean.plus">
    <ant antfile="${plus}/build.xml" inheritAll="false" target="clean"/>
  </target>

  <target name="clean.loadbalancer">
    <ant antfile="${loadbalancer}/build.xml" inheritAll="false" target="clean"/>
  </target>

  <target name="clean.ftp">
    <ant antfile="${ftp}/build.xml" inheritAll="false" target="clean"/>
  </target>

  <target name="clean.jdk1.2">
    <ant antfile="${jdk1.2}/build.xml" inheritAll="false" target="clean"/>
  </target>

</project>
