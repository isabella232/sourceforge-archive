<?xml version="1.0"  encoding="ISO8859-1"?> 
<!DOCTYPE Server SYSTEM "jetty.dtd"> 

<Server>

  <Call method="addListener">
    <Arg>
      <New class="com.mortbay.HTTP.SocketListener">
        <Set name="Address">0.0.0.0:8080</Set>
        <Set name="MinThreads">5</Set>
        <Set name="MaxThreads">255</Set>
        <Set name="MaxIdleTimeMs">50000</Set>
      </New>
    </Arg>
  </Call>


  <Call method="addWebApplication">
    <Arg></Arg>
    <Arg>/</Arg>
    <Arg><SystemProperty name="user.dir"/>/webapps/jetty/</Arg>
  </Call>


  <Call method="defineContext">
    <Arg></Arg>
    <Arg>/handler/*</Arg>

    <Set name="ResourceBase">./FileBase/</Set>
    <Call method="addHandler">
      <Arg>
        <New class="com.mortbay.HTTP.Handler.Servlet.ServletHandler">
          <Call method="addServlet">
            <Arg>/dump,/dump/*</Arg>
            <Arg>com.mortbay.Servlet.Dump</Arg>
  	    <Set name="ServletName">Dump</Set>
	    <Put name="initParam">value</Put>
          </Call>

          <Call method="addServlet">
            <Arg>/session</Arg>
            <Arg>com.mortbay.Servlet.SessionDump</Arg>
	    <Set name="ServletName">SessionDump</Set>
          </Call>
        </New>
      </Arg>
    </Call>
  </Call>


</Server>


