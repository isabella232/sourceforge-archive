<?xml version="1.0"  encoding="ISO-8859-1"?>
<!DOCTYPE Configure SYSTEM "configure.dtd">

<!-- This is a Jetty Config file to run the server with the 
     jakarta watchdog tests, which must be downloaded separately.
  -->

<Configure class="com.mortbay.HTTP.HttpServer">
  <Call name="addListener">
    <Arg>
      <New class="com.mortbay.HTTP.SocketListener">
        <Set name="Port">8080</Set>
        <Set name="MinThreads">5</Set>
        <Set name="MaxThreads">255</Set>
        <Set name="MaxIdleTimeMs">50000</Set>
      </New>
    </Arg>
  </Call>

  <Call name="addWebApplication">
    <Arg>/servlet-tests/*</Arg>
    <Arg>webapps/servlet-tests.war</Arg>
    <Arg>etc/webdefault.xml/</Arg>
  </Call>

  <Set name="LogSink">
    <New class="com.mortbay.Util.OutputStreamLogSink">
      <Set name="LogDir">./logs</Set>
      <Set name="RetainDays">90</Set>
      <Set name="MultiDay">false</Set>
      <Set name="Append">true</Set>
    </New>
  </Set>

</Configure>



