<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">
<web-app>
  <display-name>Jetty3 Demo</display-name>
  <context-param>
    <param-name>home</param-name>
    <param-value>http://jetty.mortbay.com</param-value>
  </context-param>
  <context-param>
    <param-name>admin</param-name>
    <param-value>mortbay@mortbay.com</param-value>
  </context-param>
  <servlet>
    <servlet-name>page</servlet-name>
    <servlet-class>com.mortbay.Jetty.JettyServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>dump</servlet-name>
    <servlet-class>com.mortbay.Servlet.Dump</servlet-class>
    <init-param>
      <param-name>param1</param-name>
      <param-value>value1</param-value>
    </init-param>
    <load-on-startup>false</load-on-startup>
    <security-role-ref>
      <role-name>roleName</role-name>
      <role-link>roleLink</role-link>
    </security-role-ref>
  </servlet>
  <servlet>
    <servlet-name>session</servlet-name>
    <servlet-class>com.mortbay.Servlet.SessionDump</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>page</servlet-name>
    <url-pattern>/</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>dump</servlet-name>
    <url-pattern>/dump,/dump/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>session</servlet-name>
    <url-pattern>/session</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Protected Area</web-resource-name>
      <url-pattern>/WEB-INF/*</url-pattern>
      <http-method>GET</http-method>
      <http-method>POST</http-method>
      <http-method>PUT</http-method>
      <http-method>DELETE</http-method>
    </web-resource-collection>
    <auth-constraint>
      <role-name>developer</role-name>
      <role-name>administrator</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <security-role>
      <role-name>roleName</role-name>
  </security-role>

</web-app>

