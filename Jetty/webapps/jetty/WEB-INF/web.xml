<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.2//EN" "http://java.sun.com/j2ee/dtds/web-app_2_2.dtd">   
<web-app>
  <display-name>Jetty3 Demo</display-name>
  <context-param>
    <param-name>home</param-name>
    <param-value>http://jetty.mortbay.com</param-value>
  </context-param>
  <context-param>
    <param-name>admin</param-name>
    <param-value>mortbay@mortbay.com</param-value>
  </context-param>

  <servlet>
    <servlet-name>Jetty Demo Page</servlet-name>
    <servlet-class>com.mortbay.Jetty.JettyServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>Jetty Demo Page</servlet-name>
    <url-pattern>*.html</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Jetty Demo Page</servlet-name>
    <url-pattern>*.txt</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

  <security-constraint>
    <web-resource-collection>
      <web-resource-name>Auth Area</web-resource-name>
      <url-pattern>/Auth/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>com.mortbay.HTTP.UserPrinciple</role-name>
    </auth-constraint>
    <user-data-constraint>
      <transport-guarantee>NONE</transport-guarantee>
    </user-data-constraint>
  </security-constraint>

  <login-config>
    <auth-method>BASIC</auth-method>
    <realm-name>Test Basic Authentication</realm-name>
  </login-config>

  <!--
  <security-role>
      <role-name>roleName</role-name>
  </security-role>
  -->

</web-app>


